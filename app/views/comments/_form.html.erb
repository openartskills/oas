<%= form_for([@post, @post.comments.build]) do |f| %>
<div class="field">
  <%= f.label :commenter %><br />
  <%= f.text_field :commenter %><br />
</div>

<div class="field">
  <%= f.label :body %><br />
  <%= f.text_field :body %><br />
</div>

<div class="actions">
  <%= f.submit %><br />
</div>

<% end %>

